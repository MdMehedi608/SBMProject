@model List<SBMProjectModel.Models.ViewModels.VM_Customer>
@{
    ViewBag.Title = "Customer List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="form-group">
    @if (ViewBag.SMsg != null)
    {
        <div class="col-md-offset-2 col-md-10" style="color:green">
            @ViewBag.SMsg
        </div>
    }
    @if (ViewBag.FMsg != null)
    {
        <div class="col-md-offset-2 col-md-10" style="color:red">
            @ViewBag.FMsg
        </div>
    }

</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <h5 class="card-header h5">@Html.ActionLink("Add New", "CustomerCreate", "Customer", null)</h5>
            <div class="card-body">
                @if (Model != null && Model.Count > 0)
                {
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                @*<th>@Html.DisplayNameFor(model=> model.Name)</th>*@
                                <th>Name</th>
                                <th>Contact</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Loyalty Point</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Contact
                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                    @item.Address
                                </td>
                                <td>
                                    @item.LoyaltyPoint
                                </td>

                                <td>
                                    @Html.ActionLink("Edit", "CustomerCreate", "Customer", new { id = item.Id }, null) |
                                    @Html.ActionLink("Delete", "CustomerCreate", "Customer", new { id = item.Id }, null)
                                </td>
                            </tr>
                        }

                    </table>
                }
            </div>
        </div>

    </div>

</div>
